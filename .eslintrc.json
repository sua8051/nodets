{
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "plugins": ["typescript"],
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "double"],
    "no-console": "off",
    "no-undef": "off",
    "indent": ["error", 2],
    "no-undefined": "error"
  }
}
